{
  "name": "typid",
  "version": "1.1.3",
  "description": "A minimal, beautiful Markdown editor",
  "author": "Sangamesh Gella <sangamesh@example.com>",
  "license": "MIT",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "build:mac": "vite build && electron-builder --mac",
    "build:win": "vite build && electron-builder --win",
    "build:linux": "vite build && electron-builder --linux",
    "publish:mac": "vite build && electron-builder --mac --publish always",
    "publish:win": "vite build && electron-builder --win --publish always",
    "publish:linux": "vite build && electron-builder --linux --publish always",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "release": "./scripts/release.sh",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major"
  },
  "dependencies": {
    "@milkdown/components": "^7.18.0",
    "@milkdown/crepe": "^7.18.0",
    "@milkdown/kit": "^7.18.0",
    "@milkdown/plugin-highlight": "^7.18.0",
    "@milkdown/react": "^7.18.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "follow-redirects": "^1.15.11",
    "katex": "^0.16.9",
    "mermaid": "^10.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shiki": "^1.24.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/follow-redirects": "^1.14.4",
    "@types/katex": "^0.16.7",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.typid.app",
    "productName": "Typid",
    "copyright": "Copyright Â© 2026 Sangamesh Gella",
    "afterSign": "scripts/after-sign.js",
    "publish": {
      "provider": "github",
      "owner": "gellasangameshgupta",
      "repo": "typid",
      "releaseType": "release"
    },
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "darkModeSupport": true,
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "${productName} ${version}",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons",
      "category": "Office",
      "mimeTypes": [
        "text/markdown",
        "text/x-markdown"
      ]
    },
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown",
        "description": "Markdown Document",
        "role": "Editor"
      },
      {
        "ext": "markdown",
        "name": "Markdown",
        "description": "Markdown Document",
        "role": "Editor"
      }
    ]
  }
}
